<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <micdm.transportlive2.ui.views.LoadingView
        android:id="@+id/v__vehicles__loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <RelativeLayout
        android:id="@+id/v__vehicles__loaded"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <micdm.transportlive2.ui.views.CustomMapView
            android:id="@+id/v__vehicles__map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <micdm.transportlive2.ui.views.SelectedRoutesView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <micdm.transportlive2.ui.views.SearchRouteView
            android:id="@+id/v__vehicles__search_route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>
    </RelativeLayout>
    <micdm.transportlive2.ui.views.CannotLoadView
        android:id="@+id/v__vehicles__cannot_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <micdm.transportlive2.ui.views.AboutView
        android:id="@+id/v__vehicles__about"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
</FrameLayout>
