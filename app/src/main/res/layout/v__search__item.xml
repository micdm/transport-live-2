<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/search_item_background">
    <ImageView
        android:id="@+id/v__search__item__icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="@dimen/icon_alpha"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp">
        <TextView
            android:id="@+id/v__search__item__name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/search_item_text"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/v__search__item__description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/search_item_text"/>
    </LinearLayout>
</LinearLayout>
